<% layout("/layouts/boilerplate") %>
<div class="row mt-3 justify-content-center">
  <div class="col-10 col-md-8 col-lg-6">
    <div class="card shadow-lg p-4 rounded-4 border-0" style="background: #fff;">
      <h3 class="mb-4 text-center" style="font-weight:700; color:#fe424d;">Edit your Listing</h3>
      <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="form-group mb-3">
          <label for="title">Title</label>
          <input type="text" id="title" name="listing[title]" value="<%= listing.title %>" class="form-control form-control-lg rounded-3">
        </div>
        <div class="form-group mb-3">
          <label for="description">Description</label>
          <textarea id="description" name="listing[description]" class="form-control form-control-lg rounded-3"><%= listing.description %></textarea>
        </div>
        <div class="form-group mb-3">
          Original Listing Image<br/>
          <img src="<%= originalImageUrl %>" class="img-fluid rounded-3 shadow-sm" style="max-height:180px;"/>  
        </div>
        <div class="form-group mb-3">
          <label for="image"> Upload New Image</label>
          <input type="file" id="image" name="listing[image]" class="form-control form-control-lg rounded-3"/>
        </div>
        <div class="form-group mb-3">
          <label for="location">Location</label>
          <input type="text" id="location" name="listing[location]" value="<%= listing.location %>" class="form-control form-control-lg rounded-3">
        </div>
        <div class="form-group mb-3">
          <label for="country">Country</label>
          <input type="text" id="country" name="listing[country]" value="<%= listing.country %>" class="form-control form-control-lg rounded-3">
        </div>
        <div class="form-group mb-3">
          <label for="price">Price</label>
          <input type="number" id="price" name="listing[price]" value="<%= listing.price %>" class="form-control form-control-lg rounded-3">
        </div>
        <div class="form-group mb-3">
          <label for="category">Category</label>
          <select id="category" name="listing[category]" class="form-control form-control-lg rounded-3" required>
            <option value="" disabled>Select a category</option>
            <option value="Trending" <%= listing.category === 'Trending' ? 'selected' : '' %>>Trending</option>
            <option value="Rooms" <%= listing.category === 'Rooms' ? 'selected' : '' %>>Rooms</option>
            <option value="Iconic Cities" <%= listing.category === 'Iconic Cities' ? 'selected' : '' %>>Iconic Cities</option>
            <option value="Mountains" <%= listing.category === 'Mountains' ? 'selected' : '' %>>Mountains</option>
            <option value="Castles" <%= listing.category === 'Castles' ? 'selected' : '' %>>Castles</option>
            <option value="Amazing Pools" <%= listing.category === 'Amazing Pools' ? 'selected' : '' %>>Amazing Pools</option>
            <option value="Camping" <%= listing.category === 'Camping' ? 'selected' : '' %>>Camping</option>
            <option value="Farms" <%= listing.category === 'Farms' ? 'selected' : '' %>>Farms</option>
            <option value="Arctic" <%= listing.category === 'Arctic' ? 'selected' : '' %>>Arctic</option>
            <option value="Domes" <%= listing.category === 'Domes' ? 'selected' : '' %>>Domes</option>
            <option value="Boats" <%= listing.category === 'Boats' ? 'selected' : '' %>>Boats</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary w-100 py-2 rounded-3" style="font-size:1.2rem; background:#fe424d; border:none;">Update Listing</button>
      </form>
    </div>
  </div>
</div>