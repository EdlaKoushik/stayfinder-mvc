<style>
  .navbar {
    background: #fff;
    box-shadow: 0 2px 12px rgba(254,66,77,0.07);
    padding: 0.7rem 0;
  }
  .navbar-brand {
    font-size: 2rem;
    color: #fe424d !important;
    font-weight: 800;
    letter-spacing: 1px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .navbar-nav .nav-link, .navbar-nav .nav-btn {
    color: #222 !important;
    font-weight: 600;
    margin-right: 1.2rem;
    transition: color 0.2s, background 0.2s;
    border-radius: 2rem;
    padding: 0.4rem 1.2rem;
    font-size: 1.08rem;
    background: none;
    border: none;
    display: inline-block;
  }
  .navbar-nav .nav-link:hover, .navbar-nav .nav-btn:hover {
    color: #fe424d !important;
    background: #fff0f0;
    text-decoration: none;
  }
  .navbar-nav .nav-btn.primary {
    background: #fe424d;
    color: #fff !important;
    font-weight: 700;
    margin-right: 1.2rem;
    box-shadow: 0 2px 8px rgba(254,66,77,0.10);
  }
  .navbar-nav .nav-btn.primary:hover {
    background: #d92d3a;
    color: #fff !important;
  }
  .search-form {
    display: flex;
    align-items: center;
    margin: 0 1.5rem;
    flex: 1 1 350px;
    max-width: 500px;
  }
  .search-inp {
    border-radius: 2rem 0 0 2rem;
    border: 1px solid #fe424d;
    padding: 0.6rem 1.2rem;
    font-size: 1.1rem;
    outline: none;
    width: 100%;
    min-width: 180px;
  }
  .search-btn {
    border-radius: 0 2rem 2rem 0;
    background: #fe424d;
    color: #fff;
    border: none;
    padding: 0.6rem 1.5rem;
    font-size: 1.1rem;
    transition: background 0.2s;
  }
  .search-btn:hover {
    background: #d92d3a;
  }
  @media (max-width: 600px) {
    .navbar-brand span.brand-text {
      display: none;
    }
    .navbar-brand i {
      font-size: 2rem;
    }
    .navbar-nav .nav-btn, .navbar-nav .nav-link {
      font-size: 1.4rem;
      padding: 0.4rem 0.7rem;
    }
    .navbar-nav .nav-btn span.btn-text {
      display: none;
    }
    .navbar-nav .nav-btn i, .navbar-nav .nav-link i {
      display: inline;
      font-size: 1.3rem;
    }
    .navbar-nav .nav-btn.primary {
      margin-right: 0.5rem;
    }
    .search-form {
      margin: 0.3rem 0;
      max-width: 100%;
    }
  }
  @media (max-width: 1119px) {
    .navbar-nav .nav-btn span.btn-text {
      display: none;
    }
    .navbar-nav .nav-btn i {
      display: inline;
      font-size: 1.3rem;
    }
    .navbar-nav .nav-btn, .navbar-nav .nav-link {
      font-size: 1.4rem;
      padding: 0.4rem 0.7rem;
      text-decoration: none !important;
    }
    .navbar-nav .nav-btn.primary {
      margin-right: 0.5rem;
    }
  }
  .navbar-nav .nav-btn.signup-btn, .navbar-nav .nav-btn.login-btn {
    background: #fff0f0;
    color: #fe424d !important;
    border: 1.5px solid #fe424d;
    font-weight: 700;
    border-radius: 2rem;
    margin-right: 0.7rem;
    transition: background 0.2s, color 0.2s;
    box-shadow: 0 2px 8px rgba(254,66,77,0.07);
  }
  .navbar-nav .nav-btn.signup-btn:hover, .navbar-nav .nav-btn.login-btn:hover {
    background: #fe424d;
    color: #fff !important;
    border: 1.5px solid #fe424d;
  }
  .navbar-nav.flex-row {
    flex-direction: row !important;
  }
  .navbar-nav .nav-btn.primary {
    margin-right: 0 !important;
  }
  @media (max-width: 900px) {
    .search-form {
      min-width: 180px !important;
      max-width: 100% !important;
    }
  }
</style>
<nav class="navbar navbar-expand-md sticky-top border-bottom">
  <div class="container-fluid d-flex align-items-center justify-content-between">
    <!-- Brand on the left -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i> <span class="brand-text">WanderLust</span>
    </a>
    <!-- Centered search bar -->
    <div class="flex-grow-1 d-flex justify-content-center">
      <form class="search-form mx-auto" method="get" action="/listings" style="min-width:320px;max-width:500px;width:100%;">
        <input class="search-inp" name="search" type="search" placeholder="Search destinations, cities, or listings" aria-label="Search">
        <button class="search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>
    </div>
    <!-- Right side: Add New Listing and Auth -->
    <ul class="navbar-nav d-flex align-items-center ms-3 mb-2 mb-lg-0 flex-row" style="gap:0.5rem;">
      <% if(currUser){%>
        <li class="nav-item">
          <a class="nav-btn primary" href="/listings/new" style="margin-right:1rem;">
            <i class="fa-solid fa-plus"></i> <span class="btn-text">Add new Listing</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-btn primary" href="/logout">
            <i class="fa-solid fa-right-from-bracket"></i> <span class="btn-text">Log out</span>
          </a>
        </li>
      <% } else { %>
        <li class="nav-item"><a class="nav-btn signup-btn" href="/signup"><i class="fa-solid fa-user-plus"></i> <span class="btn-text">Sign up</span></a></li>
        <li class="nav-item"><a class="nav-btn login-btn" href="/login"><i class="fa-solid fa-right-to-bracket"></i> <span class="btn-text">Log in</span></a></li>
      <% } %>
    </ul>
  </div>
</nav>